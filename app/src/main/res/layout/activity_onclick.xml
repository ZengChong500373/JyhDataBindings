        <variable name="girl" type="com.jyh.databing.onclick.Girl"/>
        <variable name="HaveFriend" type="com.jyh.databing.onclick.Handlers"/>
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{girl.name}"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="do u have boy friend"
            android:onClick="@{HaveFriend.onClickFriend}"/>
    </LinearLayout>
</layout>